nsubj(X/verb(), SO/pos())
dobj(X, DO/pos())
-> verb_rule ->
is_type(X)
p/X(SO,DO)
focus(p)
center(X)
;

detpred(X/noun(), Y/det())
-> determiner_rule ->
is_type(X)
focus(X())
center(X)
;

amod(X/noun(), Y/adj())
ltype(Y,color)
-> color_mod_rule ->
p/is_color(X,Y)
focus(p)
center(Y)
;

X/pron()
=>
focus(X)
center(X)
;

amod(X/noun(), Y/adj())
-> general_mod_rule ->
p/property(X,Y)
focus(p)
center(Y)
;