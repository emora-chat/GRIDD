have(user, p/pet())
-> user_own_pet ->
possess(user, p)
;

time(have(user, X/pet()), now)
-> user_has_pet ->
Y:<
    l/like(user, Z/do(user, Y/predicate()))
    with(Z, X)
    time(l, now)
>
user_aware(Z)
request(emora, Y)
;

time(have(user, d/dog()), now)
-> user_has_dog ->

k:<time(k/know(d, trick()), now)>
request_truth(emora, k)

loc:<time(w/walk(user, d), now) locate(w, loc/location())>
user_aware(w)
request(emora, loc)
;

time(know(d/dog(), h/heel()), now)
-> knows_heel ->
obedient(d)
;